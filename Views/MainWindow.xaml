<Window x:Class="BarTriggerPrint.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BarTriggerPrint.Views"
        xmlns:vm="clr-namespace:BarTriggerPrint.ViewModel"
		DataContext="{Binding Main, Source={StaticResource Locator}}"
        
        mc:Ignorable="d"
        Closing="Window_Closing"
        Title="在线打印系统" Height="450" Width="800"
        FontSize="16">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>

        <!--输入字段-->
        <Grid Grid.Row="1" ShowGridLines="True">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition ></ColumnDefinition>
                <ColumnDefinition IsEnabled="False"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" HorizontalAlignment="Center">班次</TextBlock>
            <TextBlock Grid.Column="1" HorizontalAlignment="Center">日期</TextBlock>
            <TextBlock Grid.Column="2" HorizontalAlignment="Center">起始序号</TextBlock>
            <ComboBox Grid.Row="1" Grid.Column="0" 
                        IsEnabled="{Binding LabelHasShift, Mode=OneWay}"
                      ItemsSource="{Binding ObsShifts, Mode=OneTime}"
                      SelectedValue="{Binding SelectedShift,Mode=OneWayToSource,
                UpdateSourceTrigger=PropertyChanged}"
                      SelectedValuePath="ShiftValue"
                      DisplayMemberPath="ShiftName"
                      ></ComboBox>
            <DatePicker Grid.Row="1" Grid.Column="1" 
                        IsEnabled="{Binding LabelHasDate,Mode=OneWay}"
                        SelectedDate="{Binding SelectedDate, UpdateSourceTrigger=PropertyChanged}"
                        ></DatePicker>
            <TextBox Grid.Row="1" Grid.Column="2"  
                     IsEnabled="{Binding LabelHasSN,Mode=OneWay}"
                     Text="{Binding StartingNumberString, UpdateSourceTrigger=PropertyChanged}" />

        </Grid>
        <Grid Grid.Row="2">
            <TextBox IsReadOnly="True" Text="模板1.btw"></TextBox>
            <Button Command="{Binding PrintCommand}" 
                    IsEnabled="{Binding SelectedBtwFile,Converter={StaticResource selbtwf2enablec}, Mode=OneWay}"
                    HorizontalAlignment="Right">打印</Button>
        </Grid>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0">统计</TextBlock>
            <TextBlock Grid.Column="1">模板1打印总数量：11111张</TextBlock>
            <TextBlock Grid.Column="2">总长度：876米</TextBlock>
            <TextBlock Grid.Column="3">打印机合计打印长度：8761米</TextBlock>
        </Grid>
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="4*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <ListBox ItemsSource="{Binding ObsBtwDirs, Mode=OneWay}" SelectedValue="{Binding SelectedBtwDir}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding ., Converter={StaticResource btwdirc},Mode=OneWay}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Viewbox Grid.Column="1" HorizontalAlignment="Stretch">
                <ListBox   
                     ItemsSource="{Binding ObsBtwFiles}" 
                     SelectedValue="{Binding SelectedBtwFile}"
                     ItemTemplate="{StaticResource templateBtwImage}"
                     >
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid 
                                Columns="{Binding ElementName=sldCols,
                                Path=Value}"></UniformGrid>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                </ListBox>
            </Viewbox>

        </Grid>
        <Slider  Grid.Row="5"  x:Name="sldCols" Value="4"
                                Minimum="1" Maximum="5" MinHeight="15"
                                HorizontalAlignment="Stretch"  VerticalAlignment="Center"
                                 ></Slider>
        <TextBox Grid.Row="6" MaxHeight="50" IsReadOnly="True" Text="{Binding Message,Mode=OneWay}" />
    </Grid>
</Window>
