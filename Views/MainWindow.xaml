<Window x:Class="BarTriggerPrint.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BarTriggerPrint.Views"
        xmlns:vm="clr-namespace:BarTriggerPrint.ViewModel"
		DataContext="{Binding Main, Source={StaticResource Locator}}"
        
        mc:Ignorable="d"
        Closing="Window_Closing"
        Title="在线打印系统" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto" MinHeight="50"/>
            <RowDefinition />
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <ListBox  ItemsSource="{Binding ObsBarcodeGeneratorVMs}"  
                     SelectedItem="{Binding BarcodeGeneratorViewModel}">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type vm:BarcodeGeneratorViewModel}">
                    <TextBlock FontWeight="Bold" Text="{Binding Name}" Margin="5"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <local:UCBarcodeGenerator Grid.Row="1" DataContext="{Binding BarcodeGeneratorViewModel}">

            </local:UCBarcodeGenerator>
            <Button Grid.Column="1" Command="{Binding ExportCommand}" Margin="5"
                    HorizontalAlignment="Center" VerticalAlignment="Center" Content="预览"></Button>
            <Button Grid.Column="2" Command="{Binding PrintCommand}" Margin="5"
                    HorizontalAlignment="Center" VerticalAlignment="Center" Content="测试打印"></Button>
        </Grid>

        <TextBox  Grid.Row="4"   IsReadOnly="True" HorizontalAlignment="Stretch"
                  Text="{Binding Message,Mode=OneWay}"
                  ></TextBox>
    </Grid>
</Window>
